{% macro render(imageName, imageAltKey, titleText, descriptionText) %}

    <div class="feature-slider-single-item focus-reset">
        <div class="row align-items-center justify-content-center">
            <div class="col-12 col-md-6 d-flex justify-content-center">
                <img class="slider-img" src="{{ imageName + page.lang + '.svg' }}" alt="{{ imageAltKey | i18n }}">
            </div>
            <div class="col-12 col-md-6">
                <div class="row">
                    <div class="content section-heading-10">
                        <h2>{{ titleText | i18n }}</h2>
                        <p>{{ descriptionText | i18n }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endmacro %}