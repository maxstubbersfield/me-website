{% macro render() %}
{% import "./menu.njk" as Menu %}

<!--Site Header Area -->

<header
  class="site-header site-header--menu-right landing-16-menu site-header--absolute site-header--sticky mobile-sticky-enable">
  <div
    class="container">
    <nav class="navbar site-navbar">
      <!-- Brand Logo-->
      <div class="brand-logo">
        <a href="{{ "/" | locale_url }}">
          <img src="/assets/images/logo/me_logo.svg" alt="Me logo" height="72" class="light-version-logo">
        </a>
      </div>

      <div class="menu-block-wrapper">
        <div class="menu-overlay"></div>
        <nav class="menu-block" id="append-menu-header">
          <div class="mobile-menu-head">
            <div class="go-back">
              <i class="fa fa-angle-left"></i>
            </div>
            <div class="current-menu-title"></div>
            <div class="mobile-menu-close">&times;</div>
          </div>
          {{Menu.render()}}
        </nav>
      </div>

      <!-- mobile menu trigger -->
      <div class="mobile-menu-trigger">
        <span></span>
      </div>
      <!--/.Mobile Menu Hamburger Ends-->

    </nav>
  </div>
</header>
<!-- navbar-{{ settings.navbar_mode}} -->
{% endmacro %}