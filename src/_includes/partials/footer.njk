{% macro render(footerCopyrightKey, websitePrivacyPolicyKey, appPrivacyPolicyKey, termsAndConditionsKey, imprintKey) %}

    <!--Footer Area-->
    <footer class="footer-area">
        <!-- Footer Bottom -->
        <div class="copyright-area text-center text-md-start">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-4 col-md-4">
                        <div class="copyright">
                            <p>&copy; {{ footerCopyrightKey | i18n }}</p>
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-6">
                        <div class="footer-menu">
                            <ul class="list-unstyled d-flex flex-wrap justify-content-center">
                                <li>
                                    <a href="{{ "/website-privacy-policy" | locale_url }}">{{ websitePrivacyPolicyKey | i18n }}</a>
                                </li>
                                <li>
                                    <a href="{{ "/app-privacy-policy" | locale_url }}">{{ appPrivacyPolicyKey | i18n }}</a>
                                </li>
                                <li>
                                    <a href="{{ "/terms-and-conditions-website" | locale_url }}">{{ termsAndConditionsKey | i18n }}</a>
                                </li>
                                <li>
                                    <a href="{{ "/imprint" | locale_url }}">{{ imprintKey | i18n }}</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-2"></div>
                </div>
            </div>
        </div>
    </footer>

{% endmacro %}