{% extends "layouts/base.njk" %}
{% block head %}{% endblock %}

{% import '../partials/header.njk' as Header %}
{% import '../partials/feature_slide.njk' as FeatureSlide with context %}

{% block main %}
  <!-- Site Header -->
  {{ Header.render({
"additional_header_class": "site-header--menu-right landing-16-menu",
"absolute_header" : "true",
container_fluid : true,
sticky_header :true,
menu_wrapper_class : "mx-auto",
hideMegamenu : false,
header_button : "true",
additional_button_classes : "header-btn-l-16 ms-auto d-none d-xs-inline-flex"
}) }}
  <!-- Hero -->
  <div class="hero-area-l-16">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-7 col-md-10 col-sm-12" data-aos="fade-right" data-aos-duration="800" data-aos-once="true">
          <div class="content">
            <h1>{{ 'home.hero.title.part1' | i18n }}
              <br class="d-sm-block d-none ">{{ 'home.hero.title.part2' | i18n }}
              <br class="d-sm-block d-none">{{ 'home.hero.title.part3' | i18n }}</h1>
            <p>{{ 'home.hero.subtitle' | i18n }}</p>
            <div class="row hero-btns">
              <div class="row">
                <a href="https://apps.apple.com/app/apple-store/id1620948275?pt=117812216&amp;ct=knowyourself&amp;mt=8">
                  <img class="d-inline-block" src="/assets/images/store_badges/app_store_badge_{{ page.lang }}.svg" alt="{{ 'home.hero.app_store_badge_alt' | i18n }}" height="54">
                </a>
                <a href="https://play.google.com/store/apps/details?id=me.knowyourself.app.me&amp;referrer=utm_source%3Dknowyourself">
                  <img class="d-inline-block" src="/assets/images/store_badges/google_play_badge_{{ page.lang }}.svg" alt="{{ 'home.hero.play_store_badge_alt' | i18n }}" height="54">
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-6 col-lg-5 col-md-8" data-aos="fade-left" data-aos-duration="800" data-aos-once="true">
          <div class="row hero-img-container align-content-center">
            <img class="hero-img" src="/assets/images/app_screenshots/mindspace_{{ page.lang }}.svg" alt="{{ 'home.hero.image_alt' | i18n }}" class="w-100">
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Slider -->
  <div class="feature-slider-area">
    <div class="container">
      <div class="feature-slider-wrapper">
        <div class="row align-items-center">
          <div class="col-1">
            <div class="row">
              <button class="slide-btn slick-prev focus-reset">
                <i class="icon icon-stre-left"></i>
              </button>
            </div>
          </div>
          <div class="col-10">
            <div class="row">
              <div class="feature-slider">
                {{FeatureSlide.render("/assets/images/app_screenshots/analysis_",'home.features.slide_1.slide_img_alt', 'home.features.slide_1.title', 'home.features.slide_1.description')}}
                {{FeatureSlide.render("/assets/images/app_screenshots/goals_",'home.features.slide_2.slide_img_alt', 'home.features.slide_2.title', 'home.features.slide_2.description')}}
                {{FeatureSlide.render("/assets/images/app_screenshots/journal_",'home.features.slide_3.slide_img_alt', 'home.features.slide_3.title', 'home.features.slide_3.description')}}
                {{FeatureSlide.render("/assets/images/app_screenshots/journal_detail_",'home.features.slide_4.slide_img_alt', 'home.features.slide_4.title', 'home.features.slide_4.description')}}
              </div>
            </div>
          </div>
          <div class="col-1">
            <div class="row">
              <button class="slide-btn slick-next focus-reset">
                <i class="icon icon-stre-right"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Video -->
  <div class="video-area">
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="content section-heading-10">
          <h2>{{ 'home.video.title' | i18n }}</h2>
        </div>
        <iframe
                class="video"
                src=""
                data-src="https://www.youtube.com/embed/zC8XEPEfpMs"
                title="When life happens"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
      </div>
    </div>
  </div>

  <!-- Podcast -->
  <div class="podcast-area">
    <div class="container">
      <div class="row justify-content-center">
        <iframe
                width="100%"
                height="166"
                scrolling="no"
                frameborder="no"
                allow="autoplay"
                src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/1177052824&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"></iframe>
      </div>
    </div>
  </div>

  <!-- Data Privacy Area -->
  <div class="feature-area-l6">
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="col-lg-10 text-center">
          <div class="top-header section-heading-10">
            <h2>{{ 'home.security_and_privacy.title' | i18n }}</h2>
            <p>{{ 'home.security_and_privacy.subtitle' | i18n }}</p>
          </div>
        </div>
      </div>
      <div class="row feature-area-l6-items justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-7">
          <div class="content-area">
            <div class="text-center">
              <img class="icon" src="/assets/images/icons/no_cloud.svg" alt="{{ 'home.security_and_privacy.point_1.image_alt' | i18n }}">
              <h6>{{ 'home.security_and_privacy.point_1.title' | i18n }}</h6>
              <p>{{ 'home.security_and_privacy.point_1.description' | i18n }}</p>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-7">
          <div class="content-area">
            <div class="text-center">
              <img class="icon" src="/assets/images/icons/lock.svg" alt="{{ 'home.security_and_privacy.point_2.image_alt' | i18n }}">
              <h6>{{ 'home.security_and_privacy.point_2.title' | i18n }}</h6>
              <p>{{ 'home.security_and_privacy.point_2.description' | i18n }}</p>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-7">
          <div class="content-area">
            <div class="text-center">
              <img class="icon" src="/assets/images/icons/no_tracking.svg" alt="{{ 'home.security_and_privacy.point_3.image_alt' | i18n }}">
              <h6>{{ 'home.security_and_privacy.point_3.title' | i18n }}</h6>
              <p>{{ 'home.security_and_privacy.point_3.description' | i18n }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Area -->
  <div class="footer-area-l-16 position-relative">
    <div class="container">
      <div class="row text-center">
        <div class="col-12">
          <div class="copyright-area d-sm-flex justify-content-between align-items-center">
            <p>&copy; {{ 'footer.copyright' | i18n }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}