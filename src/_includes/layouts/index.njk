{% extends "layouts/base.njk" %}
{% block head %}{% endblock %}

{% import '../partials/header.njk' as Header %}
{% import '../partials/feature_slide.njk' as FeatureSlide with context %}

{% block main %}
  <!-- Site Header -->
  {{ Header.render({
"additional_header_class": "site-header--menu-right landing-16-menu",
"absolute_header" : "true",
container_fluid : true,
sticky_header :true,
menu_wrapper_class : "mx-auto",
hideMegamenu : false,
header_button : "true",
additional_button_classes : "header-btn-l-16 ms-auto d-none d-xs-inline-flex"
}) }}
  <!-- Hero -->
  <div class="hero-area-l-16">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-7 col-md-10 col-sm-12" data-aos="fade-right" data-aos-duration="800" data-aos-once="true">
          <div class="content">
            <h1>{{ 'home.hero.title.part1' | i18n }}
              <br class="d-sm-block d-none ">{{ 'home.hero.title.part2' | i18n }}
              <br class="d-sm-block d-none">{{ 'home.hero.title.part3' | i18n }}</h1>
            <p>{{ 'home.hero.subtitle' | i18n }}</p>
            <div class="row hero-btns">
              <a href="https://apps.apple.com/app/apple-store/id1620948275?pt=117812216&amp;ct=knowyourself&amp;mt=8">
                <img class="d-inline-block" src="/assets/images/store_badges/app_store_badge_{{ page.lang }}.svg" alt="{{ 'home.hero.app_store_badge_alt' | i18n }}" height="54">
              </a>
              <a href="https://play.google.com/store/apps/details?id=me.knowyourself.app.me&amp;referrer=utm_source%3Dknowyourself">
                <img class="d-inline-block" src="/assets/images/store_badges/google_play_badge_{{ page.lang }}.svg" alt="{{ 'home.hero.play_store_badge_alt' | i18n }}" height="54">
              </a>
            </div>
          </div>
        </div>
        <div class="col-xl-6 col-lg-5 col-md-8" data-aos="fade-left" data-aos-duration="800" data-aos-once="true">
          <div class="row hero-img-container align-content-center">
            <img class="hero-img" src="/assets/images/app_screenshots/mindspace_{{ page.lang }}.svg" alt="{{ 'home.hero.image_alt' | i18n }}" class="w-100">
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Slider -->
  <div class="feature-slider-area">
    <div class="container">
      <div class="feature-slider-wrapper">
        <div class="row align-items-center">
          <div class="col-1">
            <div class="row">
              <button class="slide-btn slick-prev focus-reset">
                <i class="icon icon-stre-left"></i>
              </button>
            </div>
          </div>
          <div class="col-10">
            <div class="row">
              <div class="feature-slider">
                {{FeatureSlide.render("/assets/images/app_screenshots/analysis_",'home.features.slide1.slide_img_alt', 'home.features.slide1.title', 'home.features.slide1.description')}}
                {{FeatureSlide.render("/assets/images/app_screenshots/analysis_",'home.features.slide2.slide_img_alt', 'home.features.slide2.title', 'home.features.slide2.description')}}
                {{FeatureSlide.render("/assets/images/app_screenshots/analysis_",'home.features.slide3.slide_img_alt', 'home.features.slide3.title', 'home.features.slide3.description')}}
                {{FeatureSlide.render("/assets/images/app_screenshots/analysis_",'home.features.slide4.slide_img_alt', 'home.features.slide4.title', 'home.features.slide4.description')}}
              </div>
            </div>
          </div>
          <div class="col-1">
            <div class="row">
              <button class="slide-btn slick-next focus-reset">
                <i class="icon icon-stre-right"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Video -->
  <div class="video-area">
    <div class="container">
      <div class="row">
        <iframe
                class="video"
                src=""
                data-src="https://www.youtube.com/embed/zC8XEPEfpMs"
                title="When life happens"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
      </div>
    </div>
  </div>

  <!-- Podcast -->
  <div class="podcast-area">
    <div class="container">
      <div class="row justify-content-center">
        <iframe
                width="100%"
                height="166"
                scrolling="no"
                frameborder="no"
                allow="autoplay"
                src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/1177052824&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"></iframe>
      </div>
    </div>
  </div>

  <!-- Content-Area-2 -->
  <div class="content-area-2-l-16 position-relative overflow-hidden">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-12">
          <div class="border-bottom border-default-color-2">
            <div class="row justify-content-center">
              <div class="col-xl-11">
                <div class="row align-items-center justify-content-center">
                  <div
                            class="col-xl-4 col-lg-5 col-md-6 col-sm-10 position-relative"
                            data-aos="fade-left"
                            data-aos-duration="800"
                            data-aos-once="true">
                    <div class="image-area">
                      <img src="image/l7/content-img-2.png" alt="" class="w-100"></div>
                  </div>
                  <div
                              class="col-xxl-5 offset-xxl-2 col-xl-6 offset-xl-1 offset-lg-1 col-lg-6 col-md-8 col-sm-9 "
                              data-aos="fade-right"
                              data-aos-duration="800"
                              data-aos-once="true">
                    <div class="content section-heading-10">
                      <h2>Present some awesome features.</h2>
                      <div class="single-item d-flex">
                        <div class="icon-box">
                          <i class="icon icon-layers-3"></i>
                        </div>
                        <div class="content-body">
                          <h4>Super Organized</h4>
                          <p>Create custom landing pages with Shade that convert more visitors than any website.</p>
                        </div>
                      </div>
                      <div class="single-item d-flex">
                        <div class="icon-box">
                          <i class="icon icon-layers-3 "></i>
                        </div>
                        <div class="content-body">
                          <h4>Super Organized</h4>
                          <p>Create custom landing pages with Shade that convert more visitors than any website.</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Area -->
  <div class="footer-area-l-16 position-relative">
    <div class="container">
      <div class="row">
        <div class="col-xl-5 col-md-6 col-sm-8">
          <div class="d-lg-flex">
            <div class="brand-logo">
              <a href="#">
                <img src="image/logo/logo-black.png" alt=""></a>
            </div>
            <div class="content-body">
              <p>Create custom landing pages with Shade that convert more visitors than any website.</p>
            </div>
          </div>
        </div>
        <div class="col-xl-2 offset-xl-2 col-lg-3 col-md-7">
          <div class="footer-single-item">
            <h6>Office</h6>
            <p>359  Hidden Valley<br>
                                  Road, NY</p>
          </div>
        </div>
        <div class="col-xl-2 offset-xl-1 col-lg-3 col-md-5">
          <div class="footer-single-item">
            <h6>Contacts</h6>
            <p>contact@grayic.com</p>
          </div>
        </div>
      </div>
      <div class="row text-center">
        <div class="col-12">
          <div class="copyright-area d-sm-flex justify-content-between align-items-center">
            <p>
                                  &copy; Grayic 2020 All right reserved.
                                </p>
            <div class="social-icons">
              <ul class="pl-0 list-unstyled">
                <li class="d-inline-block">
                  <a href="#">
                    <i class="fab fa-facebook-f"></i>
                  </a>
                </li>
                <li class="d-inline-block">
                  <a href="#">
                    <i class="fab fa-twitter"></i>
                  </a>
                </li>
                <li class="d-inline-block">
                  <a href="#">
                    <i class="fab fa-linkedin-in"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}